            </td>
            <td>
                @Html.DisplayFor(modelItem => item.late_fee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.modified_by)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.modified_on)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.payment_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.period)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rental_fee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.thirdparty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.thirdparty_fee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tickets)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tickets_fee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total_due_amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total_paid_amount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
